---
export interface Props {
  image: string;
  title: string;
  text: string;
}

const { image, title, text } = Astro.props;
---

<div
  class="flex flex-col items-center p-4 px-10 sm:max-w-lg md:px-0 lg:p-5 gap-3"
>
  <div class="h-20 mb-5 md:mb-3 items-center justify-center flex">
    <img src={image} alt={title} object-fit="contain" />
  </div>
  <h4 class="text-center">{title}</h4>
  <p class="text-center">{text}</p>
</div>

<style></style>
